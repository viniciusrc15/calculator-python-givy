<CalculatorBtn@Button>: 
    font_size: 20
    color: [0,0,0,1]
    background_normal: 'button.png'
    radius: 50
   
<CalculatorFrm>: 
    id: calculator 
    display: entry 
    rows: 6
    padding: 5
    spacing: 5
      
   
    BoxLayout: 
        TextInput: 
            id: entry 
            font_size: 20
            multiline: False
   
    BoxLayout: 
        spacing: 5
        CalculatorBtn: 
            text: "7"
            on_press: entry.text += self.text
        CalculatorBtn: 
            text: "8"
            on_press: entry.text += self.text 
        CalculatorBtn: 
            text: "9"
            on_press: entry.text += self.text 
        CalculatorBtn: 
            text: "+"
            on_press: entry.text += calculator.verify('+')
   
    BoxLayout: 
        spacing: 5
        CalculatorBtn: 
            text: "4"
            on_press: entry.text += self.text 
        CalculatorBtn: 
            text: "5"
            on_press: entry.text += self.text 
        CalculatorBtn: 
            text: "6"
            on_press: entry.text += self.text 
        CalculatorBtn: 
            text: "-"
            on_press: entry.text += calculator.verify('-') 
   
    BoxLayout: 
        spacing: 5
        CalculatorBtn: 
            text: "1"
            on_press: entry.text += self.text 
        CalculatorBtn: 
            text: "2"
            on_press: entry.text += self.text 
        CalculatorBtn: 
            text: "3"
            on_press: entry.text += self.text 
        CalculatorBtn: 
            text: "*"
            on_press: entry.text += calculator.verify('*') 
   
    BoxLayout: 
        spacing: 5
        CalculatorBtn: 
            text: "Limpar"
            on_press: entry.text = "" 
        CalculatorBtn: 
            text: "0"
            on_press: entry.text += self.text 
        CalculatorBtn: 
            text: "="
            on_press: calculator.calculate(entry.text) 
        CalculatorBtn: 
            text: "/"
            on_press: entry.text += calculator.verify('/')

    BoxLayout: 
        spacing: 5
        CalculatorBtn: 
            text: "Raiz"
            on_press: calculator.raizQuadrada(entry.text)
        CalculatorBtn: 
            text: "XÂ²"
            on_press: calculator.quadrado(entry.text)